execute pathogen#infect()

syntax on
filetype plugin indent on

" Layout
highlight Normal ctermfg=222 ctermbg=24
highlight LineNr ctermfg=188
set background=dark


" UltiSnips
let UltiSnipsEditSplit="vertical"


" Indent
set smartindent
set softtabstop=2
set shiftwidth=2
set expandtab

" Search
set hlsearch
set incsearch

" MapLeader
let mapleader = "_"
nnoremap <C-n> :set number!<cr>

set number
set cursorline
set tabstop=2
